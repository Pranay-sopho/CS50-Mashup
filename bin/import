#!/usr/bin/env php
<?php

    // configuration
    require("../includes/config.php");
    
    // store address
    $ifile = __DIR__ . $argv[1];
    
    // make sure file exists and is readable
    if (is_readable($ifile))
    {
        // open file to read
        $handle = fopen($ifile, "r");
        
        if ($handle !== FALSE)
        {
            // download first line of csv file
            while (($data = fgetcsv($handle, 1000, "\t")) !== FALSE)
            {
                // insert data into database
                $rows = CS50::query("INSERT INTO places (country_code, postal_code, place_name, admin_name1, admin_code1, admin_name2, admin_code2, latitude, longitude, accuracy) VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)", $data[0], $data[1], $data[2], $data[3], $data[4], $data[5],  $data[6],  $data[7],  $data[8],  $data[9]);
            }
            fclose($handle);
        }
    }

?>